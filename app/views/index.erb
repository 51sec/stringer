<% content_for :title do %>
  <% unless @unread_stories.empty? %>
    <%= "(#{@unread_stories.count})" %>
  <% end %>
<% end %>

<div id="action-bar">
  <%= render_partial :action_bar, {stories: @unread_stories} %>
</div>

<% unless @unread_stories.empty? %>
<div id="stories">
  <ul id="story-list">
    <% @unread_stories.each do |story| %>
      <%= render_partial :story, { story: story } %>
    <% end %>
  </ul>
</div>
<div id="pagination">
  <% if @unread_stories.previous_page %>
    <a href="?page=<%= @unread_stories.previous_page %>"><i class="icon-double-angle-left"></i> Previous</a>
  <% end %>
  Page <%= @unread_stories.current_page %> of <%= @unread_stories.total_pages %>
  <% if @unread_stories.next_page %>
    <a href="?page=<%= @unread_stories.next_page %>">Next <i class="icon-double-angle-right"></i></a>
  <% end %>
</div>
<% else %>
  <%= render_partial :zen %>
<% end %>